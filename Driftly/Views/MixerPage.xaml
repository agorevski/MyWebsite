<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:Driftly.ViewModels"
             xmlns:models="clr-namespace:Driftly.Models"
             x:Class="Driftly.Views.MixerPage"
             x:DataType="viewmodels:MixerViewModel"
             Title="{Binding Title}"
             BackgroundColor="#FAFAFA">

    <Grid RowDefinitions="Auto,*,Auto">
        
        <!-- Header with Controls -->
        <Frame Grid.Row="0" 
               BackgroundColor="#8AB6D6" 
               CornerRadius="0" 
               Padding="20">
            <VerticalStackLayout Spacing="15">
                <Label Text="Sound Mixer" 
                       FontSize="24" 
                       FontAttributes="Bold" 
                       TextColor="White"
                       HorizontalOptions="Center"/>
                
                <!-- Timer Controls -->
                <HorizontalStackLayout Spacing="10" HorizontalOptions="Center">
                    <Label Text="Timer (minutes):" 
                           TextColor="White"
                           VerticalOptions="Center"/>
                    <Stepper Value="{Binding TimerMinutes}" 
                            Minimum="5" 
                            Maximum="120" 
                            Increment="5"/>
                    <Label Text="{Binding TimerMinutes}" 
                           TextColor="White"
                           VerticalOptions="Center"/>
                </HorizontalStackLayout>
                
                <HorizontalStackLayout Spacing="10" HorizontalOptions="Center">
                    <Button Text="Start Timer" 
                            Command="{Binding StartTimerCommand}"
                            BackgroundColor="#C9E4CA"
                            TextColor="#2E3A59"
                            CornerRadius="20"
                            IsVisible="{Binding IsTimerActive, Converter={StaticResource InvertedBoolConverter}}"/>
                    <Button Text="Stop Timer" 
                            Command="{Binding StopTimerCommand}"
                            BackgroundColor="#FF6B6B"
                            TextColor="White"
                            CornerRadius="20"
                            IsVisible="{Binding IsTimerActive}"/>
                    <Button Text="Stop All" 
                            Command="{Binding StopAllCommand}"
                            BackgroundColor="#FF6B6B"
                            TextColor="White"
                            CornerRadius="20"/>
                </HorizontalStackLayout>
            </VerticalStackLayout>
        </Frame>

        <!-- Playing Sounds -->
        <ScrollView Grid.Row="1">
            <VerticalStackLayout Padding="20" Spacing="15">
                
                <Label Text="Currently Playing" 
                       FontSize="18" 
                       FontAttributes="Bold"
                       TextColor="#2E3A59"
                       IsVisible="{Binding PlayingSounds.Count}"/>

                <CollectionView ItemsSource="{Binding PlayingSounds}"
                               SelectionMode="None">
                    <CollectionView.ItemTemplate>
                        <DataTemplate x:DataType="models:PlayingSound">
                            <Frame Margin="0,5" 
                                   Padding="15"
                                   BackgroundColor="White"
                                   CornerRadius="12"
                                   HasShadow="True">
                                <Grid RowDefinitions="Auto,Auto" ColumnDefinitions="*,Auto">
                                    
                                    <!-- Sound Info -->
                                    <Label Grid.Row="0" Grid.Column="0"
                                           Text="{Binding Sound.Name}" 
                                           FontSize="16" 
                                           FontAttributes="Bold"
                                           TextColor="#2E3A59"/>
                                    
                                    <Button Grid.Row="0" Grid.Column="1"
                                            Text="âœ•"
                                            Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodels:MixerViewModel}}, Path=RemoveSoundCommand}"
                                            CommandParameter="{Binding .}"
                                            BackgroundColor="#FF6B6B"
                                            TextColor="White"
                                            CornerRadius="20"
                                            WidthRequest="40"
                                            HeightRequest="40"/>
                                    
                                    <!-- Volume Slider -->
                                    <Grid Grid.Row="1" Grid.ColumnSpan="2" 
                                          ColumnDefinitions="Auto,*"
                                          Margin="0,10,0,0">
                                        <Label Grid.Column="0" 
                                               Text="Volume:" 
                                               VerticalOptions="Center"
                                               Margin="0,0,10,0"/>
                                        <Slider Grid.Column="1"
                                                Value="{Binding Volume}"
                                                Minimum="0"
                                                Maximum="1"
                                                MinimumTrackColor="#8AB6D6"
                                                MaximumTrackColor="#DDDDDD"
                                                ThumbColor="#8AB6D6"
                                                ValueChanged="OnVolumeChanged"/>
                                    </Grid>
                                </Grid>
                            </Frame>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>

                <Label Text="No sounds playing. Add sounds from the list below." 
                       FontSize="14"
                       TextColor="#999"
                       HorizontalOptions="Center"
                       Margin="0,20"
                       IsVisible="{Binding PlayingSounds.Count, Converter={StaticResource IsZeroConverter}}"/>

            </VerticalStackLayout>
        </ScrollView>

        <!-- Available Sounds -->
        <Frame Grid.Row="2" 
               BackgroundColor="White" 
               CornerRadius="0"
               HasShadow="True"
               Padding="20">
            <VerticalStackLayout Spacing="10">
                <Label Text="Add Sounds" 
                       FontSize="16" 
                       FontAttributes="Bold"
                       TextColor="#2E3A59"/>
                       
                <ScrollView Orientation="Horizontal" HeightRequest="80">
                    <HorizontalStackLayout Spacing="10" BindableLayout.ItemsSource="{Binding AvailableSounds}">
                        <BindableLayout.ItemTemplate>
                            <DataTemplate x:DataType="models:Sound">
                                <Button Text="{Binding Name}"
                                        Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodels:MixerViewModel}}, Path=AddSoundCommand}"
                                        CommandParameter="{Binding .}"
                                        BackgroundColor="#8AB6D6"
                                        TextColor="White"
                                        CornerRadius="20"
                                        Padding="15,10"/>
                            </DataTemplate>
                        </BindableLayout.ItemTemplate>
                    </HorizontalStackLayout>
                </ScrollView>
            </VerticalStackLayout>
        </Frame>

    </Grid>

</ContentPage>
