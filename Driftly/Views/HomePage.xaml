<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:Driftly.ViewModels"
             xmlns:models="clr-namespace:Driftly.Models"
             x:Class="Driftly.Views.HomePage"
             x:DataType="viewmodels:HomeViewModel"
             Title="{Binding Title}"
             BackgroundColor="#FAFAFA">

    <Grid>
        <ScrollView>
            <VerticalStackLayout Padding="20" Spacing="20">
                
                <!-- Header -->
                <Frame BackgroundColor="#8AB6D6" CornerRadius="12" Padding="20">
                    <VerticalStackLayout Spacing="10">
                        <Label Text="Welcome to Driftly" 
                               FontSize="28" 
                               FontAttributes="Bold" 
                               TextColor="White"
                               HorizontalOptions="Center"/>
                        <Label Text="Relax, focus, or sleep with ambient sounds" 
                               FontSize="14" 
                               TextColor="White"
                               HorizontalOptions="Center"/>
                    </VerticalStackLayout>
                </Frame>

                <!-- Quick Actions -->
                <HorizontalStackLayout Spacing="10" HorizontalOptions="Center">
                    <Button Text="Open Mixer" 
                            Command="{Binding NavigateToMixerCommand}"
                            BackgroundColor="#8AB6D6"
                            TextColor="White"
                            CornerRadius="20"
                            Padding="20,10"/>
                </HorizontalStackLayout>

                <!-- Categories -->
                <Label Text="Sound Categories" 
                       FontSize="20" 
                       FontAttributes="Bold"
                       TextColor="#2E3A59"/>
                
                <CollectionView ItemsSource="{Binding Categories}"
                               SelectionMode="None">
                    <CollectionView.ItemsLayout>
                        <GridItemsLayout Orientation="Vertical" Span="2" />
                    </CollectionView.ItemsLayout>
                    <CollectionView.ItemTemplate>
                        <DataTemplate x:DataType="models:Category">
                            <Frame Margin="5" 
                                   Padding="15"
                                   BackgroundColor="White"
                                   CornerRadius="12"
                                   HasShadow="True">
                                <Frame.GestureRecognizers>
                                    <TapGestureRecognizer 
                                        Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodels:HomeViewModel}}, Path=SelectCategoryCommand}"
                                        CommandParameter="{Binding Name}" />
                                </Frame.GestureRecognizers>
                                <VerticalStackLayout Spacing="10">
                                    <Label Text="{Binding Name}" 
                                           FontSize="16" 
                                           FontAttributes="Bold"
                                           HorizontalOptions="Center"
                                           TextColor="#2E3A59"/>
                                    <Label Text="{Binding Description}" 
                                           FontSize="12"
                                           HorizontalOptions="Center"
                                           TextColor="#666"/>
                                </VerticalStackLayout>
                            </Frame>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>

                <!-- Sounds List -->
                <Label Text="Available Sounds" 
                       FontSize="20" 
                       FontAttributes="Bold"
                       TextColor="#2E3A59"
                       Margin="0,20,0,0"/>

                <CollectionView ItemsSource="{Binding Sounds}"
                               SelectionMode="None">
                    <CollectionView.ItemTemplate>
                        <DataTemplate x:DataType="models:Sound">
                            <Frame Margin="0,5" 
                                   Padding="15"
                                   BackgroundColor="White"
                                   CornerRadius="12"
                                   HasShadow="True">
                                <Grid ColumnDefinitions="*,Auto">
                                    <VerticalStackLayout Spacing="5">
                                        <Label Text="{Binding Name}" 
                                               FontSize="16" 
                                               FontAttributes="Bold"
                                               TextColor="#2E3A59"/>
                                        <Label Text="{Binding Description}" 
                                               FontSize="12"
                                               TextColor="#666"/>
                                    </VerticalStackLayout>
                                    
                                    <Label Grid.Column="1"
                                           Text="â­" 
                                           FontSize="20"
                                           IsVisible="{Binding IsPremium}"
                                           VerticalOptions="Center"/>
                                </Grid>
                            </Frame>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
                
            </VerticalStackLayout>
        </ScrollView>

        <!-- Loading Indicator -->
        <ActivityIndicator IsRunning="{Binding IsBusy}"
                          IsVisible="{Binding IsBusy}"
                          HorizontalOptions="Center"
                          VerticalOptions="Center"
                          Color="#8AB6D6"/>
    </Grid>
    
</ContentPage>
