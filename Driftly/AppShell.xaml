<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Driftly.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Driftly"
    xmlns:views="clr-namespace:Driftly.Views"
    Title="Driftly"
    Shell.BackgroundColor="#8AB6D6"
    Shell.ForegroundColor="White"
    Shell.TabBarBackgroundColor="#8AB6D6"
    Shell.TabBarForegroundColor="White">

    <TabBar>
        <ShellContent
            Title="Home"
            Icon="home.png"
            ContentTemplate="{DataTemplate views:HomePage}"
            Route="HomePage" />

        <ShellContent
            Title="Mixer"
            Icon="mixer.png"
            ContentTemplate="{DataTemplate views:MixerPage}"
            Route="MixerPage" />
    </TabBar>

</Shell>
