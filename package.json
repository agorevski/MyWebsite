{
  "name": "mywebsite",
  "version": "1.0.0",
  "description": "Alexander Gorevski - Personal Website & Portfolio",
  "author": "Alexander Gorevski",
  "license": "MIT",
  "scripts": {
    "build": "npm run clean && npm run optimize:images && npm run extract:fontawesome && npm run build:css && npm run build:js && npm run bundle:assets && npm run critical:generate && npm run critical:apply && npm run update:sri",
    "clean": "rimraf dist",
    "optimize:images": "imagemin Images/**/*.{jpg,png,gif} --out-dir=dist/Images",
    "extract:fontawesome": "node scripts/extract-fontawesome.js",
    "build:css": "postcss Content/stylesheets/*.css Content/stylesheets/vendors/*.css --dir dist/stylesheets --no-map",
    "build:js": "esbuild Content/javascript/custom.modern.js --bundle --minify --target=es2020 --outfile=dist/javascript/custom.modern.min.js",
    "bundle:assets": "node scripts/bundle-assets.js",
    "update:sri": "node scripts/update-sri.js",
    "critical:generate": "node scripts/extract-critical-css.mjs generate",
    "critical:apply": "node scripts/extract-critical-css.mjs apply",
    "lint": "npm-run-all lint:*",
    "lint:css": "stylelint \"Content/stylesheets/**/*.css\"",
    "lint:js": "eslint \"Content/javascript/**/*.js\"",
    "lint:fix": "npm-run-all lint:*:fix",
    "lint:css:fix": "stylelint \"Content/stylesheets/**/*.css\" --fix",
    "lint:js:fix": "eslint \"Content/javascript/**/*.js\" --fix",
    "serve": "http-server . -p 8080 -o"
  },
  "devDependencies": {
    "@fortawesome/fontawesome-free": "^7.1.0",
    "@fullhuman/postcss-purgecss": "^6.0.0",
    "autoprefixer": "^10.4.16",
    "critical": "^7.2.1",
    "cssnano": "^6.0.2",
    "esbuild": "^0.27.2",
    "eslint": "^8.55.0",
    "http-server": "^14.1.1",
    "imagemin-cli": "^8.0.0",
    "materialize-css": "^1.0.0",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.32",
    "postcss-cli": "^11.0.0",
    "prettier": "^3.1.1",
    "rimraf": "^5.0.5",
    "stylelint": "^16.0.2",
    "stylelint-config-standard": "^35.0.0"
  },
  "browserslist": [
    "last 2 versions",
    "> 1%",
    "not dead"
  ]
}
