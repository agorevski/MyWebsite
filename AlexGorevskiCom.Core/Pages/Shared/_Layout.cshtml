<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <meta name="author" content="Alexander Gorevski">
    <meta name="description" content="">
    <meta name="keywords" content="">

    <title>@ViewData["Title"] - Alexander T Gorevski</title>
    
    <!-- Preconnect to Google Fonts for faster loading -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    
    <!-- Preload critical fonts -->
    <link rel="preload" as="font" type="font/woff2" href="/fonts/fontawesome-webfont.woff2" crossorigin>
    
    <!-- Critical CSS - loaded synchronously -->
    <link href="/css/original/vendors/bootstrap.min.css" rel="stylesheet">
    <link href="/css/original/vendors/materialize.css" rel="stylesheet">
    <link href="/css/original/style.css" id="switch_style" rel="stylesheet">
    
    <!-- Non-critical CSS - loaded asynchronously -->
    <link href="/css/original/vendors/fontawesome.min.css" rel="stylesheet" media="print" onload="this.media='all'">
    <link href="/css/original/vendors/animate.min.css" rel="stylesheet" media="print" onload="this.media='all'">
    <link href="/css/original/vendors/magnific-popup.css" rel="stylesheet" media="print" onload="this.media='all'">
    <link href="/css/original/vendors/swiper.min.css" rel="stylesheet" media="print" onload="this.media='all'">
    
    <!-- Google Fonts - loaded asynchronously -->
    <link href='https://fonts.googleapis.com/css?family=Raleway:500&display=swap' rel='stylesheet' media="print" onload="this.media='all'">
    <link href='https://fonts.googleapis.com/css?family=Muli&display=swap' rel='stylesheet' media="print" onload="this.media='all'">
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons&display=swap" rel="stylesheet" media="print" onload="this.media='all'">
    
    <!-- Fallback for browsers that don't support onload -->
    <noscript>
        <link href="/css/original/vendors/font-awesome.min.css" rel="stylesheet">
        <link href="/css/original/vendors/animate.min.css" rel="stylesheet">
        <link href="/css/original/vendors/magnific-popup.css" rel="stylesheet">
        <link href="/css/original/vendors/swiper.min.css" rel="stylesheet">
        <link href='https://fonts.googleapis.com/css?family=Raleway:500&display=swap' rel='stylesheet'>
        <link href='https://fonts.googleapis.com/css?family=Muli&display=swap' rel='stylesheet'>
        <link href="https://fonts.googleapis.com/icon?family=Material+Icons&display=swap" rel="stylesheet">
    </noscript>
</head>
<body>
    @RenderBody()

    <!-- FOOTER -->
    <footer>
        <div class="container">
            <p class="text-center">
                © Alex Gorevski @DateTime.Now.Year
            </p>
        </div>
    </footer>

    <!-- SCRIPTS -->
    <!-- Critical JS - loaded synchronously -->
    <script src="/js/original/vendors/jquery-2.1.3.min.js"></script>
    <script src="/js/original/vendors/bootstrap.min.js"></script>
    <script src="/js/original/vendors/materialize.min.js"></script>
    
    <!-- Non-critical JS - deferred for better performance -->
    <script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyDaNPZfQMdAHwTbVoqBAYshvj4-pI2pRjU" defer></script>
    <script src="/js/original/vendors/markerwithlabel.min.js" defer></script>
    <script src="/js/original/vendors/retina.min.js" defer></script>
    <script src="/js/original/vendors/scrollreveal.min.js" defer></script>
    <script src="/js/original/vendors/swiper.jquery.min.js" defer></script>
    <script src="/js/original/vendors/jquery.magnific-popup.min.js" defer></script>
    <script src="/js/original/custom.js" defer></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
