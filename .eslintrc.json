{
  "env": {
    "browser": true,
    "es2021": true,
    "jquery": true
  },
  "extends": "eslint:recommended",
  "parserOptions": {
    "ecmaVersion": "latest"
  },
  "ignorePatterns": ["*.min.js", "vendors/**"],
  "globals": {
    "ScrollReveal": "readonly",
    "Materialize": "readonly"
  },
  "rules": {
    "no-unused-vars": "warn",
    "no-undef": "warn",
    "semi": ["error", "always"],
    "quotes": ["warn", "single", { "allowTemplateLiterals": true }]
  }
}
